#!/usr/bin/env bash

out=""
while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *)    optarg= ;;
  esac

  case $1 in
      --includes)
        if [ -z ${CETLIB_EXCEPT_INC+x} ]; then
          out="-I${GALLERY_INC} \
               -I${BOOST_INC} \
               -I${CANVAS_INC} \
               -I${CETLIB_INC} \
               -I${FHICLCPP_INC} \
               -I${LARDATAOBJ_INC} \
               -I${NUSIMDATA_INC} \
               -I${LARCOREOBJ_INC} \
               -I${MESSAGEFACILITY_INC}"
        else
          out="-I${GALLERY_INC} \
               -I${BOOST_INC} \
               -I${CANVAS_INC} \
               -I${CETLIB_INC} \
               -I${CETLIB_EXCEPT_INC} \
               -I${FHICLCPP_INC} \
               -I${LARDATAOBJ_INC} \
               -I${NUSIMDATA_INC} \
               -I${LARCOREOBJ_INC} \
               -I${MESSAGEFACILITY_INC}"
        fi
    ;;
      --libdir)
    out="${GALLERY_LIB} ${BOOST_LIB} ${CANVAS_LIB} ${CETLIB_LIB}"
    ;;
      --libs)
        if [ -z ${CETLIB_EXCEPT_LIB+x} ]; then

          out="-L${CANVAS_LIB} -lcanvas_Persistency_Common -lcanvas_Persistency_Provenance -lcanvas_Utilities \
               -L${CETLIB_LIB} -lcetlib \
               -L${GALLERY_LIB} -lgallery \
               -L${NUSIMDATA_LIB} -lnusimdata_SimulationBase \
               -L${LARCOREOBJ_LIB} -llarcoreobj_SummaryData \
               -L${LARDATAOBJ_LIB} -llardataobj_RecoBase \
               -L${MESSAGEFACILITY_LIB} -lMF_MessageService -lMF_FileFormat -lMF_MessageLogger -lMF_Utilities"
        else
          out="-L${CANVAS_LIB} -lcanvas \
               -L${CETLIB_LIB} -lcetlib \
               -L${CETLIB_EXCEPT_LIB} -lcetlib_except \
               -L${GALLERY_LIB} -lgallery \
               -L${NUSIMDATA_LIB} -lnusimdata_SimulationBase \
               -L${LARCOREOBJ_LIB} -llarcoreobj_SummaryData \
               -L${LARDATAOBJ_LIB} -llardataobj_RecoBase \
               -L${MESSAGEFACILITY_LIB} -lMF_MessageService -lMF_FileFormat -lMF_MessageLogger -lMF_Utilities"  
        fi
    ;;
      --help)
    ### Print a help message
          echo "Usage: `basename $0` [options]"
    echo ""
    echo "  --includes ... print out includes"
    echo "  --libs     ... print out libraries"
    exit 0
    ;;
      *)
    ### Give an error
          echo "Unknown argument \"$1\"!" 1>&2
    echo "${usage}" 1>&2
    exit 1
    ;;
  esac
  shift
done
echo $out
